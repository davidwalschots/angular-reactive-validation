{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "esnext",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2020",
    "strict": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "angular-reactive-validation": [
        "./dist/angular-reactive-validation"
      ],
      "core-js/es7/reflect": [
        "node_modules/core-js/proposals/reflect-metadata",
      ]
    }
  }
}
